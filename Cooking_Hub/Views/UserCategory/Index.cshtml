@model PaginatedList<RecipeViewModel>
@{
    ViewData["Title"] = "Category List";
    ViewData["Title Description"] = "Category List Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="inner-page-banner bg-common" data-bg-image="~/img/figure/inner-page-banner1.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-area">
                    <h1 class="h1-overss">@ViewData["Title Description"]</h1>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="category-page-wrap padding-top-80 padding-bottom-50">
    <div class="container">
        <div class="row">
           
            @foreach (var category in Model)
            {
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="category-box-layout1">
                    <figure class="item-figure">
                        <a href="single-recipe1.html">
                                <img src="~/UserImage/@category.RecipeImage" style="height: 334px; width: 370px;" alt="Product">
                        </a>
                    </figure>
                    <div class="item-content">
                            <h3 class="item-title"><a href="single-recipe1.html">@category.Categoryname</a></h3>
                            <span class="sub-title"> @category.TotalLikes Recipes</span>
                    </div>
                </div>
            </div>
            }
              
            </div>
        <ul class="pagination-layout1">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="@((i == Model.PageIndex) ? "active" : "")">
                    <a href="?pageNumber=@i">@i</a>
                </li>
            }
        </ul>
    </div>
</section>