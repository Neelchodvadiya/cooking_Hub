@model Cooking_Hub.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="card col-md-9">
    <div class="card-header">
        Contact Us Information
    </div>
    <div class="card-body">
        <div class="row" style="margin-top:10px">
            <div class="col-md-2">
                <strong>Name:</strong>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.ContactName)
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-md-2">
                <strong>Email:</strong>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.ContactEmail)
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-md-2">
                <strong>Subject:</strong>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.ContactSubject)
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-md-2">
                <strong>Message:</strong>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.ContactMessage)
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-md-2">
                <strong>Created At:</strong>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ContactId" />
                <button type="submit" value="Delete" class="waves-effect waves-circle btn btn-circle btn-danger-light  mb-5">
                    <i class="fa fa-trash"></i></button> |
                <a style="margin-left: 20px" asp-action="Index" class="waves-effect waves-circle btn btn-circle btn-primary-light mb-5"> <i class="fas fa-arrow-left"></i>  </a>

            </form>
            
        </div>
    </div>
</div>

    
   
